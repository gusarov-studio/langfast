{
  "name": "langfast",
  "scripts": {
    "hosting:dev": "cd hosting && npm run dev",
    "hosting:build": "cd hosting && npm run build",
    "hosting:start": "cd hosting && npm run start",
    "prepare": "if command -v husky; then husky; fi",
    "conf": "infisical export --path=/other > supabase/.env.local",
    "start": "supabase start",
    "dev": "concurrently --kill-others --names next 'npm run hosting:dev'"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,md,json,yml,yaml,html}": "prettier --write"
  },
  "private": true
}